# Server Configuration
PORT=8080
ENV=development # development, staging, production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/quasarflow?sslmode=disable

# Stellar Configuration
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org # Use https://horizon.stellar.org for mainnet
STELLAR_NETWORK=testnet # testnet or mainnet

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-here # Must be exactly 32 bytes
JWT_SECRET=your-jwt-secret-key-here

# Logging
LOG_LEVEL=info # debug, info, warn, error

# API Rate Limiting
RATE_LIMIT=100 # requests per minute
RATE_LIMIT_BURST=200